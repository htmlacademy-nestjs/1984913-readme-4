@publicationId={{createPost.response.body.id}}
# Create a new post
# @name createPost
POST http://localhost:3001/api/publication/add HTTP/1.1
Content-Type: application/json

{
  "type": "text",
  "title": "Test title",
  "announcement": "test test",
  "text": "Long text"
}

